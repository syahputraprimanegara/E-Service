<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpelangi"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/mLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/logopemprov"/>
    <TextView
        android:id="@+id/mainTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mLogo"
        android:layout_marginTop="20dp"
        android:text="Dinas Kominfo Provinsi Lampung"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/putih"
        />

    <TextView
        android:id="@+id/subTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/putih"
        android:text="PRESENT"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/mainTittle"
        android:layout_marginTop="15dp"/>


</RelativeLayout>
